<div class="container">
  <div class="row">
    <div class="col-sm-6 col-xs-12">
      <form class="form form-horizontal search-teacher">
        <div class="form-group">
          <div class="col-sm-5 col-xs-12">
            <select class="select2 form-control">
              <option>商管學院 - 資訊管理學系</option>
              <option>工學院 - 資訊工程學系</option>
            </select>
          </div>
          <div class="col-sm-7 col-xs-12">
            <div class="input-group">
              <input class="form-control" placeholder="搜尋" />
              <span class="input-group-btn">
                <button type="submit" class="btn btn-default add-on hover-effect">
                  <i class="fa fa-search fa-fw"></i>
                </button>
              </span>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div class="col-xs-12">
      <% 10.times do %>
        <div class="row teacher">
          <div class="avatar col-md-2">
            <%= image_tag "avatar-test#{(rand(3) + 1)}.jpg", class: 'img-responsive' %>
          </div>
          <div class="teacher-info col-md-3">
            <h3 class="teacher-name">傳說中的<small>教授</small></h3>
            <p>商管學院 - 資訊管理學系</p>

            <div class="comments">
              <div class="quantity">
                <i class="fa fa-comments-o fa-fw text-ios"></i>
                123<span class="text-muted">個評語</span>
              </div>

              <%= link_to teacher_path(1), class: 'btn btn-default comment pull-right' do %>
                評語<i class="fa fa-angle-right"></i>
              <% end %>
            </div>
          </div>
          <div class="courses col-md-7">
            <h4 class="page-header"><i class="fa fa-book fa-fw"></i>授課課程</h4>
            <div class="row">
              <% 4.times do %>
                <div class="col-md-6">
                  <div class="comments">
                    <div class="name">
                      物件導向設計
                    </div>
                    <div class="quantity">
                      <i class="fa fa-comments-o fa-fw text-ios"></i>
                      123<span class="text-muted">個評語</span>
                    </div>
                    <%= link_to teacher_comment_path(1, 1), class: 'btn btn-default comment pull-right' do %>
                      評語<i class="fa fa-angle-right"></i>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <div class="btn btn-block btn-sm btn-link text-center text-ios btn-more">
                  <i class="fa fa-angle-down fa-lg fa-fw"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
        <hr class="divide" />
      <% end %>

      <!-- Pagination -->
      <div class="row">
        <div class="col-xs-12 text-center text-ios">
          <ul class="pagination">
            <li><a href="#"><i class="fa fa-angle-left"></i></a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
          </ul>
        </div>
      </div>
      <!-- Pagination -->
    </div>
  </div>
</div>